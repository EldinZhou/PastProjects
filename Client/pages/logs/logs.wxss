/* pages/register/register.wxss */
page{
  display: flex;
  flex-direction: column;
  height:100%;
}

input{
  border: 3px solid #70bcf6; 
  border-radius: 5px;  
  background-color: white;
  width: 90%;
}

.tab{
  display: flex;
}

.tab-item{
  flex:1;
  font-size:10pt;
  text-align:center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
}

.content{
  flex:1;
}

.content>swiper{
  height:100%;
}

.tab-item.active {
  color: #5b94c27a;
  border-bottom-color: #6e5bc25e;
}

.category {
  padding: 0 10px 10px;
  margin-top: 10px;
  font-size: 14px;
  text-align: center;
  background-color: #fff;
  overflow: hidden;
}

/* 轮播图 */

.content-info-slide {
  height: 302rpx;
  margin-bottom: 20px;
}

.content-info-slide image {
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.weui-media-box__hd {
  position: relative;
}

.shop__rest {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  line-height: 1.5;
  color: #fff;
  font-size: 0.8em;
  background-color: #999;
}

.shop__item {
  align-items: flex-start;
  background-color: #fff;
}

.shop__sales {
  margin-top: 10px;
  display: flex;
  align-items: center;
  color: #000;
}

.shop__star {
  margin-right: 5px;
}

.hello{
  color:orange;
}

.helloYa{
  color:pink;
}

.shop__misc {
  margin-top: 10px;
}

.labelBar{
  text-align: right;
  color: blueviolet;
  font-weight: bold;
  font-size: 18px;
}

.img{
  display:flex;
  height:100%;
  align-content:center;
  justify-content: center
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.barSelect {
  background-color:white;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rebeccapurple;
  position: relative;
  right: 2px;
  left: 20px;
  top: 210px;
  height: 500rpx;
  width: 680rpx;
}

.barSelect1 {
  background-color:white;
  box-shadow: 6rpx 6rpx 6rpx 6rpx rebeccapurple;
  position: relative;
  right: 2px;
  left: 20px;
  top: 5px;
  height: 150rpx;
  width: 680rpx;
}